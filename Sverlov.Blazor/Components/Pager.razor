<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item" disabled="@(CurrentPage <= 1)">
            <button class="page-link" @onclick="PreviousPage" disabled="@(CurrentPage <= 1)">
                Предыдущая
            </button>
        </li>

        @if (TotalPages <= 10)
        {
            @for (int i = 1; i <= TotalPages; i++)
            {
                var pageNumber = i;
                <!-- Важно: захват переменной -->
                <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                    <button class="page-link" @onclick="@(() => GoToPage(pageNumber))">
                        @pageNumber
                    </button>
                </li>
            }
        }
        else
        {
            <!-- Если страниц много — можно добавить логику с "..." , но для простоты опустим -->
            <span class="page-link">...</span>
        }

        <li class="page-item" disabled="@(CurrentPage >= TotalPages)">
            <button class="page-link" @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)">
                Следующая
            </button>
        </li>
    </ul>
</nav>

<div class="text-center mt-3">
    Страница @CurrentPage из @TotalPages
</div>

@code {
    [CascadingParameter]
    public IProductService ProductService { get; set; } = null!;

    // Локальные свойства, чтобы избежать предупреждений о null и упростить разметку
    private int CurrentPage => ProductService?.CurrentPage ?? 1;
    private int TotalPages => ProductService?.TotalPages ?? 1;

    protected override void OnInitialized()
    {
        if (ProductService != null)
        {
            ProductService.ListChanged += StateHasChanged;
        }
    }

    private async Task PreviousPage()
    {
        if (ProductService != null && ProductService.CurrentPage > 1)
        {
            await ProductService.GetProducts(ProductService.CurrentPage - 1);
        }
    }

    private async Task NextPage()
    {
        if (ProductService != null && ProductService.CurrentPage < ProductService.TotalPages)
        {
            await ProductService.GetProducts(ProductService.CurrentPage + 1);
        }
    }

    private async Task GoToPage(int page)
    {
        if (ProductService != null && page != ProductService.CurrentPage)
        {
            await ProductService.GetProducts(page);
        }
    }

    public void Dispose()
    {
        if (ProductService != null)
        {
            ProductService.ListChanged -= StateHasChanged;
        }
    }
}